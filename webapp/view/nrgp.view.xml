<mvc:View
    xmlns:mvc="sap.ui.core.mvc"
    xmlns="sap.uxap"
    xmlns:fo="sap.f"
    xmlns:m="sap.m"
    xmlns:core="sap.ui.core"
    xmlns:t="sap.ui.table"
    xmlns:mdc="sap.ui.mdc"
    xmlns:mdct="sap.ui.mdc.table"
    xmlns:vm="sap.ui.fl.variants"
    xmlns:smartTable="sap.ui.comp.smarttable"
    xmlns:sfb="sap.ui.comp.smartfilterbar"
    xmlns:upload="sap.m.upload"
    xmlns:f="sap.ui.layout.form"
    xmlns:layout="sap.ui.layout"
    controllerName="znrgp.controller.nrgp"
    height="100%"
>
    <m:Page id="_IDGenPage1" title="NRGP">
        <m:customHeader>
            <m:Toolbar id="tool"/>
        </m:customHeader>
        <m:content>
            <f:SimpleForm id="IDGenSimpleForm" editable="true">
                <f:content>
                <!-- <m:Toolbar id="_IDGenToolbar2">
                    <m:ToolbarSpacer id="_IDGenToolbarSpacer1" />
                    <m:Button id="btnShip" type="Emphasized" text="Ship" press="onClickShip" />
                </m:Toolbar> -->
                    <!-- Left Section -->
                    <m:VBox id="_IDGenVBox" >

                        <m:HBox id="_IDGenHBox" alignItems="Center">
                            <m:Label id="_IDGenLabel1" text="Plant:" required="true" width="180px"  />
                            <m:Input id="Plant" value="{HEADER>/Plant}" width="200px" showValueHelp="true" valueHelpRequest=".onValueHelpPlant" editable="{visibilityModel>/editability}" />
                        </m:HBox>

                        <m:HBox id="_IDGenHBox2" alignItems="Center" >
                            <m:Label id="_IDGenLabel2" text="Document No.:" required="true" width="180px" />
                            <m:Input id="DocumentNo" value="{HEADER>/DocumentNo}" width="200px" editable = "false"/>
                        </m:HBox>

                        <m:HBox id="_IDGenHBox25" alignItems="Center" >
                            <m:Label id="_IDGenLabel251" text="Document Date:" required="true" width="180px" />
                            <m:DatePicker id="DocumentDate" value="{HEADER>/DocumentDate}" width="200px" displayFormat="dd/MM/yyyy" valueFormat="yyyy-MM-dd" editable = "false"/>
                        </m:HBox>

                       <m:HBox id="_IDGenHBox31" alignItems="Center">
                            <m:Label id="_IDGenLabel31" text="NRGP No.:" required="false" width="180px" />
                            <m:Input id="NRGPNo" value="{HEADER>/NrgpNo}" width="200px" editable = "false" />
                        </m:HBox>
                        
                        <m:HBox id="_IDGenHBox4" alignItems="Center">
                            <m:Label id="_IDGenLabel4" text="NRGP Date:" required="false" width="180px" />
                            <m:DatePicker id="NRGPDate" value="{HEADER>/NrgpDate}" width="200px" displayFormat="dd/MM/yyyy" valueFormat="yyyy-MM-dd" editable = "false"/>
                        </m:HBox>

                        <m:HBox id="_IDGenHBox5" alignItems="Center">
                            <m:Label id="_IDGenLabel6" text="Storage Location:" required="true" width="180px" />
                            <m:Input id="Loaction" value="{HEADER>/FromStorageLoc}" width="200px" showValueHelp="true" valueHelpRequest=".onValueHelpLoc" editable="{visibilityModel>/editability}"  />
                        </m:HBox>

                        <m:HBox id="_IDGenHBox6" alignItems="Center">
                            <m:Label id="_IDGenLabel7" text="Status:" required="false" width="180px" />
                            <m:Input id="Status" value="{HEADER>/Status}" width="200px" editable = "false" />   
                        </m:HBox>


                        <m:HBox id="_IDGenHBox7" alignItems="Center">
                            <m:Label id="_IDGenLabel9" text="Description 1:" required="false" width="180px" />
                            <m:Input id="Description1" value="{HEADER>/Description1}" width="500px" editable="{visibilityModel>/editability}" />
                        </m:HBox>

                        <m:HBox id="_IDGenHBox9" alignItems="Center">
                            <m:Label id="_IDGenLabel10" text="Description 2:" required="false" width="180px" />
                            <m:Input id="Description2" value="{HEADER>/Description2}" width="500px" editable="{visibilityModel>/editability}" />
                        </m:HBox>
                    </m:VBox>

                    <!-- Right Section -->
                    <m:VBox id="_IDGenVBox1">
                        <m:HBox id="_IDGenHBox8" alignItems="Center">
                            <m:Label id="_IDGenLabel8" text="Partner:" required="true" width="180px" />
                            <m:ComboBox id="Partner" width="200px" value="{HEADER>/PartnerType}" selectedKey="{HEADER>/PartnerType}" change="onPartnerTypeChange" editable="{visibilityModel>/editability}">
                                <m:items>
                                    <core:Item id="_IDGenItem1" key="Vendor" text="Vendor" />
                                    <core:Item id="_IDGenItem2" key="Customer" text="Customer" />
                                    <core:Item id="_IDGenItem3" key="Other" text="Other" />
                                </m:items>
                            </m:ComboBox>
                        </m:HBox>

                        <m:HBox id="_IDGenHBox3" alignItems="Center">
                            <m:Label id="_IDGenLabel5" text="Partner Code:" required="true" width="180px" />
                            <m:Input id="PatnerCode" width="200px" value="{HEADER>/PartnerCode}" showValueHelp="true" valueHelpRequest=".onValueHelpPartner" editable="{visibilityModel>/editability}" />
                        </m:HBox>

                        <m:HBox id="_IDGenHBox10" alignItems="Center">
                            <m:Label id="_IDGenLabel11" text="Patner Name:" required="false" width="180px" />
                            <m:Input id="PatnerName" width="200px" value="{HEADER>/PartnerName}" editable="{= ${HEADER>/PartnerType} === 'Other' }"  />
                        </m:HBox>

                        <m:HBox id="_IDGenHBox11" alignItems="Center">
                            <m:Label id="_IDGenLabel12" text="Address 1:" required="false" width="180px" />
                            <m:Input id="Address1" width="200px" value="{HEADER>/Addr1}" editable="{= ${HEADER>/PartnerType} === 'Other' }" />
                        </m:HBox>

                        <m:HBox id="_IDGenHBox12" alignItems="Center">
                            <m:Label id="_IDGenLabel13" text="Address 2:" required="false" width="180px" />
                            <m:Input id="Address2" width="200px" value="{HEADER>/Addr2}" editable="{= ${HEADER>/PartnerType} === 'Other' }" />
                        </m:HBox>

                        <m:HBox id="_IDGenHBox13" alignItems="Center">
                            <m:Label id="_IDGenLabel14" text="State Code:" required="false" width="180px" />
                            <m:Input id="StateCode" width="200px" value="{HEADER>/StateCode}" editable="{= ${HEADER>/PartnerType} === 'Other' }" />
                        </m:HBox>

                        <m:HBox id="_IDGenHBox14" alignItems="Center">
                            <m:Label id="_IDGenLabel15" text="Pin Code:" required="false" width="180px" />
                            <m:Input id="Pin" width="200px" value="{HEADER>/Pin}" editable="{= ${HEADER>/PartnerType} === 'Other' }" />
                        </m:HBox>

                        <m:HBox id="_IDGenHBox165" alignItems="Center">
                            <m:Label id="_IDGenLabel224" text="Ref Document No. :" required="false" width="180px"  />
                            <m:Input id="_IDGenInput114" value="{HEADER>/ReferenceDocument}" width="200px" editable="false" />
                        </m:HBox>
                    </m:VBox>

                    <!-- Right Section -->
                    <!-- <m:VBox id="_IDGenVBox4">
                        <m:VBox id="_IDGenVBox2">
                            <m:HBox id="_IDGenHBox16" alignItems="Center">
                                <m:Label id="_IDGenLabel15" text="Purchase Group:" required="true" width="180px" />
                                <m:Input id="PurchaseGroup" value="{HEADER>/PurchaseGroup}" width="200px" />
                            </m:HBox>
                        </m:VBox>

                        <m:VBox id="_IDGenVBox3">
                            <m:HBox id="_IDGenHBox1" alignItems="Center">
                                <m:Label id="_IDGenLabel5" text="File Upload:" required="true" width="180px" />
                                <m:Button id="btnUpload" type="Emphasized" text="Upload" press="onFileUpload" />
                            </m:HBox>
                        </m:VBox>

                    </m:VBox> -->

                </f:content>
            </f:SimpleForm>
        </m:content>

        <!-- Table Section -->
        <fo:DynamicPage id="dynamicPageBillingEntry" fitContent="true" title="Items">
        <fo:content>
            <t:Table id="TableDetails" rows="{DETAILS>/Items}" rowMode="Auto"  
                selectionMode="MultiToggle">

            <t:extension>
                <m:OverflowToolbar id="toolbarOrderDetails">
                    <m:Title id="titleOrderDetails" text="Items" />
                    <m:ToolbarSpacer id="_IDGenToolbarSpacer" />
                    <m:Button id="btnAddLine" icon="sap-icon://add" press="addLine" enabled="{visibilityModel>/editability}" />
                    <m:Button id="btnDeleteLine" icon="sap-icon://delete" press="deleteLine" enabled="{visibilityModel>/editability}" />
                </m:OverflowToolbar>
            </t:extension>

            <t:columns>
                <!-- Line No -->
                <t:Column id="colLineNo" width="8rem">
                    <m:Label id="_IDGenLabel3" text="Line Item" />
                    <t:template>
                        <m:Input id="_IDGenInput11" value="{DETAILS>LineNum}" editable="false"/>
                    </t:template>
                </t:Column>

                <!-- Item Code -->
                <t:Column id="colItemCode" width="15rem">
                    <m:Label id="_IDGenLabel16" text="Material Code" required="true" />
                    <t:template> 
                        <m:Input id="_IDGenInput" value="{DETAILS>ItemCode}" liveChange=".onValueChange" showValueHelp="true" valueHelpRequest=".onValueHelpitem" editable="{visibilityModel>/editability}" />
                    </t:template>
                </t:Column>

                <!-- Item Name -->
                <t:Column id="colItemName" width="12rem">
                    <m:Label id="_IDGenLabel17" text="Material Name" />
                    <t:template>
                        <m:Input id="_IDGenInput1" value="{DETAILS>ItemName}" liveChange=".onValueChange" editable="false"/>
                    </t:template>
                </t:Column>

                <!-- Description -->
                <t:Column id="colDescription" width="14rem">
                    <m:Label id="_IDGenLabel18" text="Description" />
                    <t:template>
                        <m:Input id="_IDGenInput2" value="{DETAILS>Description}"  editable="{visibilityModel>/editability}"/>
                    </t:template>
                </t:Column>

                <!-- Quantity -->
                <t:Column id="colQty" width="8rem">
                    <m:Label id="_IDGenLabel19" text="Quantity" required="true"/>
                    <t:template>
                        <m:Input id="_IDGenInput3" value="{DETAILS>Qty}" type="Number" liveChange=".onValueChange" editable="{visibilityModel>/editability}"/>
                    </t:template>
                </t:Column>

                <!-- Shipped Quantity -->
                <!-- <t:Column id="colShippedQty" width="8rem">
                    <m:Label id="_IDGenLabel29" text="Shipped Quantity" required="false"/>
                    <t:template>
                        <m:Input id="_IDGenInput30" value="{DETAILS>ShippedQuantity}" type="Number" liveChange=".onValueChange"/>
                    </t:template>
                </t:Column> -->

                <!-- Unit -->
                <t:Column id="colUnit" width="8rem">
                    <m:Label id="_IDGenLabel20" text="Unit" />
                    <t:template>
                        <m:Input id="_IDGenInput4" value="{DETAILS>Unit}" liveChange=".onValueChange" editable="{visibilityModel>/editability}" />
                    </t:template>
                </t:Column>

                             <!-- Batch -->
                <t:Column id="colBatch" width="12rem">
                    <m:Label id="_IDGenLabel271" text="Batch" required="true"/>
                    <t:template>
                        <m:Input id="_IDGenInput111" value="{DETAILS>Batch}" showValueHelp="true" valueHelpRequest=".onvaluehelpbatch" editable="{visibilityModel>/editability}"/>
                    </t:template>
                </t:Column>

                       <!-- Cost Center -->
                <t:Column id="colCostCenter" width="12rem">
                    <m:Label id="_IDGenLabel261" text="Cost Center" required="true"/>
                    <t:template>
                        <m:Input id="_IDGenInput101"  value="{DETAILS>CostCenter}" editable="{visibilityModel>/editability}" showValueHelp="true" valueHelpRequest=".onValueHelpCostCenter" />
                    </t:template>
                </t:Column>

                <!-- Rate -->
                <t:Column id="colRate" width="10rem">
                    <m:Label id="_IDGenLabel21" text="Rate" required="true"/>
                    <t:template>
                        <m:Input id="_IDGenInput5" value="{DETAILS>Rate}"  liveChange=".onValueChange" editable="{visibilityModel>/editability}"/>
                    </t:template>
                </t:Column>

                <!-- Net Weight -->
                <t:Column id="colnetweight" width="10rem">
                    <m:Label id="_IDGenLabel27" text="Net Weight" required="true"/>
                    <t:template>
                        <m:Input id="_IDGenInput12" value="{DETAILS>NetWeight}" liveChange=".onValueChange" editable="{visibilityModel>/editability}"/>
                    </t:template>
                </t:Column>

                <!-- Item Amount -->
                <t:Column id="colItemAmount" width="12rem">
                    <m:Label id="_IDGenLabel22" text="Item Amount" />
                    <t:template>
                        <m:Input id="_IDGenInput6" value="{DETAILS>ItemAmount}" type="Number" liveChange=".onValueChange" editable="false" />
                    </t:template>
                </t:Column>

                <!-- Tax Code -->
                <t:Column id="colTaxCode" width="8rem">
                    <m:Label id="_IDGenLabel23" text="Tax Code" required="true"/>
                    <t:template>
                        <m:Input id="_IDGenInput7" value="{DETAILS>TaxCode}" liveChange=".onValueChange" showValueHelp="true" valueHelpRequest=".onValueHelptax" editable="{visibilityModel>/editability}" />
                    </t:template>
                </t:Column>

                <!-- Tax % -->
                <t:Column id="colTaxPercent" width="8rem">
                    <m:Label id="_IDGenLabel24" text="Tax %" />
                    <t:template>
                        <m:Input id="_IDGenInput8" value="{DETAILS>TaxPercent}"  editable="{visibilityModel>/editability}" />
                    </t:template>
                </t:Column>

                <!-- Tax Amount -->
                <t:Column id="colTaxAmount" width="12rem">
                    <m:Label id="_IDGenLabel25" text="Tax Amount" />
                    <t:template>
                        <m:Input id="_IDGenInput9" value="{DETAILS>TaxAmount}" type="Number" liveChange=".onValueChange"  editable="{visibilityModel>/editability}"/>
                    </t:template>
                </t:Column>

                <!-- Net Amount -->
                <t:Column id="colNetAmount" width="12rem">
                    <m:Label id="_IDGenLabel26" text="Net Amount" />
                    <t:template>
                        <m:Input id="_IDGenInput10" value="{DETAILS>NetAmount}" type="Number" liveChange=".onValueChange"  editable="{visibilityModel>/editability}"/>
                    </t:template>
                </t:Column>

          
            </t:columns>
        </t:Table>
    </fo:content>
   </fo:DynamicPage>
   <m:footer>
    <m:Toolbar id="_IDGenToolbar1">
        <m:ToolbarSpacer id="_IDGenToolbarSpacer1" />
        <m:Button id="btnCreate" type="Emphasized" text="Create" press="onClickCreate" visible="{visibilityModel>/visibility}" enabled="{visibilityModel>/shipbtnshow}"  />
        <m:Button id="btnShip" type="Emphasized" text="Ship" press="onClickShip" enabled="{visibilityModel>/shipbtnshow}"/>
        <!-- <m:Button id="btnClear" type="Emphasized" text="Clear" press="onClickClear" /> -->

    </m:Toolbar>
</m:footer>

    </m:Page>
</mvc:View>